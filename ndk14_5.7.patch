+++ b/Makefile
@@ -36,6 +36,13 @@ ANDROID_V8 ?= /data/local/tmp/v8
 
 # Special build flags. Use them like this: "make library=shared"
 
+# inspector=on/off
+ifeq ($(inspector), on)
+  GYPFLAGS += -Dv8_enable_inspector=1
+endif
+ifeq ($(inspector), off)
+  GYPFLAGS += -Dv8_enable_inspector=0
+endif
 # library=shared || component=shared_library
